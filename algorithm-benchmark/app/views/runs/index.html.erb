 <% @runs.each do |run| %>   
    <div class="col-3 col-lg-2">
        <p><a href="<%= run_path(run) %>"><%= run.datetime %></a><br>
        Category: <%= run.category %> <br>
        Sub-category: <%= run.sub_category %><br>
            <%= link_to 'Delete', run_path(run), method: :delete, 
				data: { confirm: 'Delete?' } %>
        </p>
    </div>
<% end %>